<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">
    <ImageView
        android:alpha="0.7"
        android:background="@mipmap/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingLeft="120dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="66dp"
                        android:background="@mipmap/icon_bat_dark"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="22sp"
                        android:text="48V电池"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:gravity="center|bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="20sp"
                        android:text="可取"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_get_num_48"
                        android:layout_marginLeft="20dp"
                        android:textSize="60sp"
                        android:text="00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:text="可换"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_exchange_num_48"
                        android:layout_marginLeft="20dp"
                        android:textSize="60sp"
                        android:text="00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:alpha="0.2"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:layout_width="300dp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="66dp"
                        android:background="@mipmap/icon_bat_dark"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="22sp"
                        android:text="60V电池"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:gravity="center|bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="20sp"
                        android:text="可取"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_get_num_60"
                        android:layout_marginLeft="20dp"
                        android:textSize="60sp"
                        android:text="00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:text="可换"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_exchange_num_60"
                        android:layout_marginLeft="20dp"
                        android:textSize="60sp"
                        android:text="00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:alpha="0.2"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:layout_width="300dp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="66dp"
                        android:background="@mipmap/icon_bat_dark"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="22sp"
                        android:text="72V电池"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:gravity="center|bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="20sp"
                        android:text="可取"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_get_num_72"
                        android:layout_marginLeft="20dp"
                        android:textSize="60sp"
                        android:text="00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:text="可换"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_exchange_num_72"
                        android:layout_marginLeft="20dp"
                        android:textSize="60sp"
                        android:text="00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:alpha="0.2"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:layout_width="300dp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="22sp"
                    android:text="可还电池:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_return_num"
                    android:layout_marginLeft="10dp"
                    android:textSize="40sp"
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <ImageView
                android:layout_marginLeft="30dp"
                android:id="@+id/iv_qr_code"
                android:layout_width="220dp"
                android:layout_height="220dp" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_login"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>